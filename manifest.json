{
  "manifest_version": 3,
  "name": "Session Cleaner",
  "version": "1.1",
  "description": "Quickly clear session data, cookies, and local storage from the current website with a single click!",
  "permissions": ["activeTab", "cookies", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "16icon.png",
      "48": "48icon.png",
      "128": "128icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Session Cleaner"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "16icon.png",
    "48": "48icon.png",
    "128": "128icon.png"
  }
}
